{
  "name": "whatsapp-decryptor",
  "services": [
    {
      "name": "app",
      "type": "app",
      "image": "node:18-alpine",
      "buildCommand": "docker build -t whatsapp-decryptor .",
      "startCommand": "node src/app.js",
      "ports": [
        {
          "containerPort": 3000,
          "protocol": "http"
        }
      ],
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "healthCheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 3,
        "retries": 3
      },
      "resources": {
        "memoryLimit": "1Gi",
        "cpuLimit": "1000m"
      }
    }
  ]
}
